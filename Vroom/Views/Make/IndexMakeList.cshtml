@{
}
@model IEnumerable<Vroom.Models.Make>
@{
    ViewBag.Title = "List of Makes";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Make of Vehicle</h2>
    </div>
    <br />
    <div class="col-6  text-right">
        <a class="btn btn-info" asp-controller="make" asp-action="Create"><i class="fas fa-motorcycle"></i> &nbsp; Add new Vehicle</a>
    </div>
    <br />

    <table class=" col-12 table table-striped bordered">
       <tr class="tale-info">
           <th>
               @*@shows the name of the field@*@

               @Html.DisplayNameFor(m => m.Name)
           </th>
           <th></th>
       </tr>
        @foreach( var item in Model)
        {
            <tr>
                <td>
                    @*Shows the value of the field*@
                    @Html.DisplayFor(m =>item.Name)
                </td>
                <td class="text-right">
                    <form method="post">
                        <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.Id"><i class="far fa-edit"></i></a>

                        <button type="submit" onclick="return confirm('Are you sure you wnat to delete? Make: @item.Name');" class="btn btn-outline-danger"  asp-action="Delete" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i></button> 
                    </form>
                   
                    
                </td>
            </tr>
        }
    </table>
</div>