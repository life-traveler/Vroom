@*the object that we need here is the one that we pass for delete and edit buttons/methods to work which is id, so the object that we pass is int *@
@model int

<td class="text-right">
    <form method="post">
        <a class="btn btn-outline-info" asp-action="EditModel" asp-route-id="@Model"><i class="far fa-edit"></i></a>

        <button type="submit" onclick="return confirm('Are you sure you wnat to delete the item? ');" class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model"><i class="far fa-trash-alt"></i></button>
    </form>
</td>
